# FinPath Insight - Environment Configuration Example
# Copy this file to .env and fill in your actual values

# Database Configuration
# Supabase Configuration
VITE_SUPABASE_URL=your_supabase_url_here
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Authentication
JWT_SECRET=your_secure_jwt_secret_here
JWT_EXPIRES_IN=90d

# Server Configuration
NODE_ENV=development  # Use 'production' for production environment
PORT=8000

# AI and Vector DB Configuration
GEMINI_API_KEY=your_gemini_api_key_here
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_INDEX_NAME=your_pinecone_index_name
PINECONE_CLOUD=aws
PINECONE_REGION=us-east-1

# Financial Data APIs
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_here

# News APIs
NEWS_API_KEY=your_news_api_key_here
GNEWS_API_KEY=your_gnews_api_key_here

# FastAPI Backend URL
# For local development
FASTAPI_URL=http://localhost:8000
# For production
#FASTAPI_URL=https://your-production-url.com

# Frontend Configuration
VITE_API_BASE_URL=http://localhost:8000
VITE_ENABLE_FALLBACK_APIS=false
VITE_APP_VERSION=1.0.0
